% FIR filter
clc;
close all;
clear all;
warning('off','all');

xn = [1 2 -1 5 6] % input('Enter a finite sequence: ');
hn = input('Enter impulse response of FIR Filter: ');
N = input('Enter N: ');

% calculating length
L = length(xn);
M = length(hn);
lenyn = L+M-1;

% padding to lenyn
xn = [xn zeros(1, lenyn)];
hn = [hn zeros(1, lenyn)];
yn = zeros(1, lenyn);

if N < lenyn
    error('N must be greater than lenght of x(n) and h(n)');
end

Xk = DFT(xn, N)
hk = DFT(hn, N)
